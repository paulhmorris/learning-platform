datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

model User {
  id       String   @id @default(cuid())
  clerkId  String?  @unique
  role     UserRole @default(USER)
  stripeId String?

  stripeVerificationSessionId String?
  isIdentityVerified          Boolean @default(false)

  courses                 UserCourse[]
  quizProgresses          UserQuizProgress[]
  lessonProgresses        UserLessonProgress[]
  preCertificationAnswers PreCertificationAnswer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index(fields: [clerkId])
}

enum UserRole {
  USER
  ADMIN
  SUPERADMIN
}

model Course {
  id                           String  @id @default(cuid())
  strapiId                     Int
  stripePriceId                String
  stripeProductId              String
  host                         String  @unique
  issuesCertificate            Boolean @default(false)
  requiresIdentityVerification Boolean @default(false)

  userCourses                  UserCourse[]
  preCertificationQuestions    PreCertificationQuestion[]
  certificateNumberAllocations CertificateNumberAllocation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index(fields: [strapiId])
}

// Relations
model UserCourse {
  id                 Int       @id @default(autoincrement())
  isCompleted        Boolean   @default(false)
  completedAt        DateTime?
  certificateClaimed Boolean   @default(false)
  userId             String
  courseId           String

  user        User         @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  course      Course       @relation(fields: [courseId], references: [id])
  certificate Certificate?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, courseId])
  @@map("UserCourses")
}

model UserLessonProgress {
  id          Int     @id @default(autoincrement())
  isCompleted Boolean @default(false)

  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId   String
  /// The lesson id from Strapi
  lessonId Int

  durationInSeconds Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, lessonId])
}

model UserQuizProgress {
  id          Int     @id @default(autoincrement())
  isCompleted Boolean @default(false)
  score       Int?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
  /// The quiz id from Strapi
  quizId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, quizId])
}

/// Some courses require a few questions to be answered before receiving a certificate
/// e.g. the Hip Hop Driving course requires an address to put on the certificate.
/// These will be shown on the certificate redemption page at the end of the course.
/// The button to retrieve the certificate will be disabled until the required questions are answered.
model PreCertificationQuestion {
  id                   Int     @id @default(autoincrement())
  courseId             String
  fieldLabel           String
  /// text | textarea | date | select
  fieldType            String
  fieldName            String
  fieldPlaceholder     String?
  fieldRequired        Boolean @default(true)
  fieldPattern         String?
  fieldMinLength       Int?
  fieldMaxLength       Int?
  fieldAutocomplete    String?
  /// For when the field is type select.
  /// Format: Array<{ value: string, label string }>
  fieldDropdownOptions Json?

  course                  Course                   @relation(fields: [courseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  preCertificationAnswers PreCertificationAnswer[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PreCertificationAnswer {
  id         Int    @id @default(autoincrement())
  questionId Int
  userId     String
  value      String

  user     User                     @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  question PreCertificationQuestion @relation(fields: [questionId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, questionId])
}

model Certificate {
  id       Int      @id @default(autoincrement())
  number   String   @unique
  s3Key    String?
  issuedAt DateTime @default(now())

  userCourse   UserCourse @relation(fields: [userCourseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userCourseId Int        @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userCourseId])
}

model CertificateNumberAllocation {
  id     Int     @id @default(autoincrement())
  number String  @unique
  isUsed Boolean @default(false)

  course   Course @relation(fields: [courseId], references: [id])
  courseId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}
