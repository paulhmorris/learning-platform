datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-1.0.x", "rhel-openssl-3.0.x"]
}

model User {
  id       String   @id @default(cuid())
  clerkId  String?  @unique
  role     UserRole @default(USER)
  stripeId String?

  stripeVerificationSessionId String?
  isIdentityVerified          Boolean @default(false)

  quizProgresses   UserQuizProgress[]
  lessonProgresses UserLessonProgress[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index(fields: [clerkId])
}

enum UserRole {
  USER
  ADMIN
  SUPERADMIN
}

model Course {
  id                           String  @id @default(cuid())
  strapiId                     Int
  stripePriceId                String
  stripeProductId              String
  host                         String  @unique
  issuesCertificate            Boolean @default(false)
  requiresIdentityVerification Boolean @default(false)

  userCourses                  UserCourse[]
  certificateNumberAllocations CertificateNumberAllocation[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index(fields: [strapiId])
}

// Relations
model UserCourse {
  id                 Int       @id @default(autoincrement())
  isCompleted        Boolean   @default(false)
  completedAt        DateTime?
  certificateClaimed Boolean   @default(false)
  /// Clerk user_id
  userId             String
  courseId           String

  course      Course       @relation(fields: [courseId], references: [id])
  certificate Certificate?

  createdAt                      DateTime                        @default(now())
  updatedAt                      DateTime                        @updatedAt
  preCertificationFormSubmission PreCertificationFormSubmission?

  @@unique([userId, courseId])
  @@map("UserCourses")
}

model UserLessonProgress {
  id          Int     @id @default(autoincrement())
  isCompleted Boolean @default(false)

  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId   String
  /// The lesson id from Strapi
  lessonId Int

  durationInSeconds Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, lessonId])
}

model UserQuizProgress {
  id          Int     @id @default(autoincrement())
  isCompleted Boolean @default(false)
  score       Int?

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String
  /// The quiz id from Strapi
  quizId Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, quizId])
}

model Certificate {
  id       Int      @id @default(autoincrement())
  number   String   @unique
  s3Key    String?
  issuedAt DateTime @default(now())

  userCourse   UserCourse @relation(fields: [userCourseId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userCourseId Int        @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userCourseId])
}

model CertificateNumberAllocation {
  id     Int     @id @default(autoincrement())
  number String  @unique
  isUsed Boolean @default(false)

  course   Course @relation(fields: [courseId], references: [id])
  courseId String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([courseId])
}

model PreCertificationFormSubmission {
  id           Int  @id @default(autoincrement())
  formData     Json
  userCourseId Int  @unique

  userCourse UserCourse @relation(fields: [userCourseId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
